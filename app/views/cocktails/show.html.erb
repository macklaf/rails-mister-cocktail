<div class="conatiner">
<h1> <%= @cocktail.name %></h1>
<h2>Recipe</h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li><%= dose.description%> <%=  dose.ingredient.name  %> <%= link_to"Delete",
                                                                      dose_path(dose),
                                                                      method: :delete,
                                                                      data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>
<%= link_to "add a dose",  new_cocktail_dose_path(@cocktail), :class => "btn btn-primary"%>
<%= link_to "back to cocktails",  cocktails_path, :class => "btn btn-primary"%>

</div>

